import java.util.*;
public class Simple
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int amount = sc.nextInt();
        int year = sc.nextInt();
        float interest = sc.nextFloat();
        float f=(amount*year*interest)/100;
        System.out.printf("%.2f",f);
        
        
        //write your code
    }
}
