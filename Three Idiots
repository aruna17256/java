import java.util.*;
public class Three
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        int d=sc.nextInt();
         float e=(float) (a+c)/2;
         float f=(float) (b+d)/2;
        System.out.printf(" Binoy's house is located at (%.1f,%.1f)",e,f );
        
    }
}
